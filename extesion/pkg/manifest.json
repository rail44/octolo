{
  "description": "Open files with local editor from GitHub Web",
  "manifest_version": 2,
  "name": "octolo",
  "version": "1.0",
  "applications": {
    "gecko": {
      "id": "{3de89a2b-180a-427e-85dd-29c983e93ba3}",
      "strict_min_version": "65.0"
    }
  },
  "background": {
    "scripts": ["dist/background.js"]
  },
  "content_scripts": [
    {
      "matches": ["*://*.github.com/*"],
      "js": ["dist/content.js"]
    }
  ],
  "permissions": ["nativeMessaging", "contextMenus"]
}
